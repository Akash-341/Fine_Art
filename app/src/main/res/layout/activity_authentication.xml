<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Ui.Activity.Authentication.Authentication_Activity">

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|left"
        android:layout_marginLeft="@dimen/Main_Margin_Left"
        android:layout_marginTop="@dimen/_40sdp"
        android:src="@drawable/app_logo" />

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/Main_Margin"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/Main_Margin"

        android:src="@drawable/show_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/Main_Margin_Left"
        android:layout_marginTop="@dimen/_minus20sdp"
        android:layout_marginRight="@dimen/Main_Margin_Right"
        android:text="Hello !"
        android:textColor="@color/white"

        android:textSize="@dimen/_26ssp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Main_Margin_Left"
        android:layout_marginTop="@dimen/Half_Main_Margin_Top"
        android:layout_marginRight="@dimen/Main_Margin_Right"
        android:layout_marginBottom="@dimen/_minus30sdp"
        android:text="At Fine Art Hub, we believe that every piece of jewellery tells a unique story."
        android:textAlignment="center"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Main_Margin_Left"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginRight="@dimen/Main_Margin_Right"
        android:background="@drawable/red_round_filled_button_background"
        android:backgroundTint="@color/app_color"
        android:orientation="horizontal"
        android:padding="@dimen/Main_Padding">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/SC_Product_Price_Text_Size" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registration_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Main_Margin_Left"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginRight="@dimen/Main_Margin_Right"
        android:background="@drawable/red_round_outline_button_background"
        android:orientation="horizontal"

        android:padding="@dimen/Main_Padding">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="@color/app_color"
            android:textSize="@dimen/SC_Product_Price_Text_Size" />


    </RelativeLayout>







</LinearLayout>