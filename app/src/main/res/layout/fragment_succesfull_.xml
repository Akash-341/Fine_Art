<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_14sdp"
    android:background="@color/white"
    tools:context=".Ui.Dialogs.SuccesfullDialog_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/Main_Dialog_Padding_Left"
            android:paddingRight="@dimen/Main_Dialog_Padding_Right"
            android:paddingTop="@dimen/Main_Padding"
            android:paddingBottom="@dimen/Main_Padding">
            <ImageView
                android:id="@+id/Close_Img"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/close_icons"
                app:tint="@color/black"
                android:layout_marginTop="@dimen/Main_Margin_Top"
                android:layout_marginRight="@dimen/Main_Margin_Right"/>
            <ImageView
                android:id="@+id/Icon_Img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/add_cart_vector_icon"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/Mesg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Are you sure you want to update password?"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@id/Icon_Img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/Main_Margin_Top"

                />

            <RelativeLayout
                android:id="@+id/Conform_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:layout_below="@id/Mesg_txt"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/Main_Margin_Bottom"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dialog_button_background">

                <TextView
                    android:id="@+id/Conform_btn_txt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp"
                    android:text="Yes,update"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

            </RelativeLayout>



        </RelativeLayout>









    </RelativeLayout>

</androidx.cardview.widget.CardView>