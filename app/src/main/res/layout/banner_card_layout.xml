<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"

   android:paddingRight="@dimen/_14sdp"
    android:paddingLeft="@dimen/_14sdp"
    android:paddingTop="@dimen/_14sdp"
    android:paddingBottom="@dimen/_7sdp"
    android:background="@color/white"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/demo_image"
        app:shapeAppearance="@style/Product_Item_Shape_Image" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/banner_background"
        android:alpha="0.4"
        android:layout_gravity="bottom"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Main_Margin"
        android:layout_gravity="bottom"

        android:orientation="vertical">
        <TextView
            android:id="@+id/productName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premium Neckless"
            android:textColor="@color/white"
            android:textSize="@dimen/SC_Product_Price_Text_Size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose for your Neck"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/buy_nowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_14sdp"
        android:background="@drawable/red_round_filled_button_background"
        android:orientation="horizontal"
        android:backgroundTint="@color/black"
        android:paddingRight="@dimen/_12sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp"
        android:layout_gravity="top|right"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Buy Now"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            />







    </RelativeLayout>

</FrameLayout>