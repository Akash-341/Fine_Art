<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/Main_Margin_Left"
    android:layout_marginRight="@dimen/Main_Margin_Right"
    android:layout_marginBottom="@dimen/Main_Margin_Bottom"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/Round_Shape_Radius"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/_4sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/SC_Card_Padding">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/SC_image_size"
            android:layout_height="@dimen/SC_image_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_image"
            app:shapeAppearance="@style/Round_Shape_Image" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/Half_Main_Margin_Left"
            android:layout_toRightOf="@id/product_image"

            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productName_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Bridal kundan Set"
                    android:textSize="@dimen/SC_Product_Name_Text_Size"
                    android:paddingRight="@dimen/_7sdp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/moreOption_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/more_icon"
                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SC_Product_Description_Text_Size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productColor_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Light Green"

                    android:textSize="@dimen/SC_Product_Description_Text_Size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="|"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SC_Product_Description_Text_Size"


                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SC_Product_Description_Text_Size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productSize_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Regular Free"

                    android:textSize="@dimen/SC_Product_Description_Text_Size" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3dp"
                        android:text="â‚¹"

                        android:textColor="@color/black"
                        android:textSize="@dimen/SC_Product_Price_Text_Size"


                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPrice_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SC_Product_Price_Text_Size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/discountPrice_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:paddingRight="3dp"
                        android:text="30000"


                        android:textSize="@dimen/SC_Product_Cancel_Price_Text_Size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/gray_round_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4sdp">

                    <RelativeLayout
                        android:id="@+id/minus_btn"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:background="@drawable/image_button_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/minus_icon" />


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/quntity_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:text="12"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SC_Product_Description_Text_Size"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:id="@+id/plus_btn"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:background="@drawable/image_button_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/plus_icon" />


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="22dp"
        android:layout_height="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/item_selection_background"

        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/plus_icon" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>