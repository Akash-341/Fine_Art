<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FineArt" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/black</item>



        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>



    <style name="Round_Shape_Image" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/SC_Image_Round_Radius</item>
        <item name="cornerSizeTopRight">@dimen/SC_Image_Round_Radius</item>
        <item name="cornerSizeBottomLeft">@dimen/SC_Image_Round_Radius</item>
        <item name="cornerSizeBottomRight">@dimen/SC_Image_Round_Radius</item>
    </style>

    <style name="Profile_Image_Shape" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="Product_Item_Shape_Image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_14sdp</item>
        <item name="cornerSizeTopRight">@dimen/_14sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_14sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_14sdp</item>
    </style>

    <style name="Product_Item_Shape_Image1" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>

        <item name="cornerSizeTopLeft">@dimen/_14sdp</item>
        <item name="cornerSizeTopRight">@dimen/_14sdp</item>

    </style>

    <style name="RoundedCornerFlotButtonStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/Round_Shape_Radius</item> <!-- Adjust this value as needed -->
    </style>



    <style name="RoundPopUpMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/pop_menu_background</item>
        <item name="android:dropDownHorizontalOffset">@dimen/_minus5sdp</item>
        <item name="android:dropDownVerticalOffset">@dimen/_1sdp</item>

        <item name="android:textAppearance">@style/PopUpText</item>

    </style>

    <style name="PopUpText" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:textSize">14sp</item>


    </style>

    <style name="NoBackgroundDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>



    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:indeterminateDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">@dimen/_24sdp</item>
        <item name="android:maxHeight">@dimen/_24sdp</item>

    </style>



</resources>